<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Imagen de fondo -->
        <ImageView
            android:id="@+id/ivBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/imgecel"
            android:contentDescription="Imagen del curso" />

        <!-- Overlay gradiente para mejor legibilidad -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_overlay" />

        <!-- HEADER: Número de curso y logo -->
        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="12dp">

            <!-- Sección izquierda: Número y Logo -->
            <LinearLayout
                android:id="@+id/llLeftSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Número del curso -->
                <TextView
                    android:id="@+id/tvCourseNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_bg_dark"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:elevation="2dp" />

                <!-- Logo del curso -->
                <ImageView
                    android:id="@+id/ivCourseLogo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_udemy_d"
                    android:contentDescription="Logo de Udemy"
                    android:background="@drawable/circle_white_bg"
                    android:padding="10dp"
                    android:elevation="2dp" />

            </LinearLayout>

        </RelativeLayout>

        <!-- FOOTER: Información del curso -->
        <LinearLayout
            android:id="@+id/llFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@drawable/gradient_overlay"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Título del curso -->
            <TextView
                android:id="@+id/tvCourseTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Excel TOTAL en 30 Días - Excel completo"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <!-- Descripción del curso -->
            <TextView
                android:id="@+id/tvCourseDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aprende Excel desde cero hasta nivel avanzado con ejercicios prácticos"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:alpha="0.9" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>